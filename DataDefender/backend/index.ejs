const express = require('express');
const cors = require('cors');
const phishingRoute = require('./routes/phishing');
const breachRoute = require('./routes/breach');

const app = express();
app.use(cors());
app.use(express.json());

app.use('/api/phishing', phishingRoute);
app.use('/api/breach', breachRoute);

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log(`CyberSentinel backend running on port ${PORT}`);
});
